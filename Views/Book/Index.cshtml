@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.4.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 30px;
        }

        h1 {
            
            text-align: center;
            color: #5a6268;
        }

        .settings {
            margin-bottom: 30px;
        }

        .settings label {
            font-weight: bold;
        }

        .settings select, .settings input {
            margin-bottom: 10px;
            width: 100%;
        }

        .btn {
            width: 100%;
        }

        .book-table {
            margin-top: 20px;
        }

        .table th, .table td {
            text-align: left;
            vertical-align: middle;
        }

        .book-details {
            display: none;
            margin-top: 10px;
            background-color: #f7f7f7;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            transition: all 0.3s ease;
        }

        .book-details img {
            max-width: 200px;
            border-radius: 8px;
            margin-top: 10px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .book-details ul {
            padding-left: 20px;
        }

        .book-details li {
            font-size: 14px;
            margin-bottom: 5px;
        }

        .btn-info {
            width: 150px;
            margin-top: 5px;
        }

        #load-more {
            margin-top: 20px;
        }
        #language {
            font-size: 16px;
            padding-left: 30px;
            background-color: #f0f0f0;
            border-radius: 5px;
            border: 1px solid #ccc;
            padding-right: 30px;
        }

        #language option {
            padding-left: 20px;
            font-size: 14px;
        }

        #language .flag-icon {
            width: 20px;
            height: 15px;
            margin-right: 10px;
            vertical-align: middle;
        }
        #flags {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .flag {
            display: block;
            border-radius: 5px;
        }

        .book-details-container {
            display: flex;
            gap: 20px;
        }

        .book-info {
            padding-left: 20px;
            flex: 1;
            max-width: 60%;
        }

        .book-cover {
            flex: 1;
            max-width: 40%;
            text-align: center;
        }

        .book-cover img {
            width: 100%;
            max-width: 200px;
            height: auto;
        }

        .likes-info {
            margin-top: 10px;
            font-size: 1.1em;
            font-weight: bold;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1>Book Store App</h1>
        <div class="settings">
            <div id="flags">
                <img src="https://upload.wikimedia.org/wikipedia/commons/a/a4/Flag_of_the_United_States.svg" alt="Flag of USA" class="flag" id="usa-flag" width="50" />
                <img src="https://upload.wikimedia.org/wikipedia/commons/f/fc/Flag_of_Mexico.svg" alt="Flag of Mexico" class="flag" id="mexico-flag" width="50" />
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/c3/Flag_of_France.svg" alt="Flag of France" class="flag" id="france-flag" width="50" />
            </div>
            <label>Language:</label>
            <select id="language">
                <option value="en" class="flag-icon flag-icon-us">English</i> </option>
                <option value="es" class="flag-icon flag-icon-mx"> Spanish</option>
                <option value="fr" class="flag-icon flag-icon-fr"> French </option>
            </select>


            <label>Seed:</label>
            <input type="number" id="seed" value="42" />

            <button id="random-seed" class="btn btn-primary">Generate Random Seed</button>

            <label for="likes">Likes: </label><span id="rangeValue"> 3.7</span>
            <input type="range" id="likes" min="0" max="10" step="0.1" value="3.7" />
            
            <label>Reviews:</label>
            <input type="number" id="reviews" min="0" max="10" step="0.1" value="2.5" />
        </div>
        <button id="load-books" class="btn btn-success">Load Books</button>
        <div class="book-table">
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>ISBN</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Likes</th>
                        <th>Reviews</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody id="book-list"></tbody>
            </table>
        </div>

        <button id="load-more" class="btn btn-secondary">Load More</button>
    </div>

    <script>
        let page = 1;

        function loadBooks(reset = false) {
            const likes = $('#likes').val();
            const reviews = $('#reviews').val();
            if (reset) page = 1;

            $.post('/Book/GenerateBooks', {
                page: page,
                likes: likes,
                reviews: reviews
            }, function (data) {
                if (reset) $('#book-list').empty();

                data.forEach(book => {
                    const detailsButton = `<button class="btn btn-info btn-sm" onclick="toggleDetails(${book.index})">Show Details</button>`;

                   let bookRow = `
                        <tr>
                            <td>${book.index}</td>
                            <td>${book.isbn}</td>
                            <td>${book.title}</td>
                            <td>${book.author}</td>
                            <td>${book.publisher}</td>
                            <td>${book.likes}</td>
                            <td>${book.reviews}</td>
                            <td>${detailsButton}</td>
                        </tr>`;

                    let bookDetailsRow = `
                        <tr class="book-details" id="details-${book.index}">
                            <td colspan="8">
                                <div class="book-details-container">
                                    <div class="book-info">
                                        <strong class="tittle-details">Book Details:</strong>
                                        <p><strong>ISBN:</strong> ${book.isbn}</p>
                                        <p><strong>Title:</strong> ${book.title}</p>
                                        <p><strong>Author:</strong> ${book.author}</p>
                                        <p><strong>Publisher:</strong> ${book.publisher}</p>
                                        <ul>
                                            ${book.reviewList && book.reviewList.length > 0 ? 
                                                book.reviewList.map((review, index) => 
                                                    `<li>Review ${index + 1}: ${review}</li>`
                                                ).join('') : 
                                                `<li>No reviews available</li>`
                                            }
                                        </ul>
                                    </div>
                
                                    <div class="book-cover">
                                        <img src="${book.coverImage}" alt="Book Cover" />
                                        <div class="likes-info">
                                            <i class="fas fa-thumbs-up"></i>
                                            ${book.likes}
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>`;

                    $('#book-list').append(bookRow + bookDetailsRow);
                });

                page++;
            });
        }

        $('#load-books').click(() => {
            const language = $('#language').val();
            const seed = $('#seed').val();
            const likes = $('#likes').val();
            const reviews = $('#reviews').val();
            $.post('/Book/UpdateSettings', { language, seed, likes, reviews }, () => {
                loadBooks(true);
            });
        });

        $('#load-more').click(() => {
            loadBooks();
        });

        $('#random-seed').click(() => {
            $('#seed').val(Math.floor(Math.random() * 1000000));
        });

        function toggleDetails(bookIndex) {
            $(`#details-${bookIndex}`).toggle();
        }

        $(document).ready(() => {
            loadBooks(true);
        });

        const rangeInput = document.getElementById('likes');
        const rangeValue = document.getElementById('rangeValue');

        rangeInput.addEventListener('input', function() {
            rangeValue.textContent = rangeInput.value;
        });

    </script>
</body>
</html>
